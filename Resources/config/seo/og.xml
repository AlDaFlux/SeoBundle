<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="aldaflux_seo.configurator.og" class="Aldaflux\Bundle\SeoBundle\Seo\Og\OgSeoConfigurator">
            <argument>%aldaflux_seo.og%</argument>
        </service>

        <service id="aldaflux_seo.generator.og" class="Aldaflux\Bundle\SeoBundle\Seo\Og\OgSeoGenerator" public="true">
            <argument id="aldaflux_seo.builder" type="service"/>
            <configurator service="aldaflux_seo.configurator.og" method="configure" />
            <tag name="aldaflux_seo.generator" alias="og"/>
        </service>

        <!-- for autowiring -->
        <service id="Aldaflux\Bundle\SeoBundle\Seo\Og\OgSeoGenerator" alias="aldaflux_seo.generator.og" />
    </services>
</container>
