<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="aldaflux_seo.configurator.twitter" class="Aldaflux\Bundle\SeoBundle\Seo\Twitter\TwitterSeoConfigurator">
            <argument>%aldaflux_seo.twitter%</argument>
        </service>

        <service id="aldaflux_seo.generator.twitter" class="Aldaflux\Bundle\SeoBundle\Seo\Twitter\TwitterSeoGenerator" public="true">
            <argument id="aldaflux_seo.builder" type="service"/>
            <configurator service="aldaflux_seo.configurator.twitter" method="configure" />
            <tag name="aldaflux_seo.generator" alias="twitter"/>
        </service>

        <!-- for autowiring -->
        <service id="Aldaflux\Bundle\SeoBundle\Seo\Twitter\TwitterSeoGenerator" alias="aldaflux_seo.generator.twitter" />
    </services>
</container>
