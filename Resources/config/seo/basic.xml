<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="aldaflux_seo.configurator.basic" class="Aldaflux\Bundle\SeoBundle\Seo\Basic\BasicSeoConfigurator">
            <argument>%aldaflux_seo.basic%</argument>
        </service>

        <service id="aldaflux_seo.generator.basic" class="Aldaflux\Bundle\SeoBundle\Seo\Basic\BasicSeoGenerator" public="true">
            <argument id="aldaflux_seo.builder" type="service"/>
            <configurator service="aldaflux_seo.configurator.basic" method="configure" />
            <tag name="aldaflux_seo.generator" alias="basic"/>
        </service>

        <!-- for autowiring -->
        <service id="Aldaflux\Bundle\SeoBundle\Seo\Basic\BasicSeoGenerator" alias="aldaflux_seo.generator.basic" />
    </services>
</container>
