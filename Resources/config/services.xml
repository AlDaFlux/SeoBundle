<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="aldaflux_seo.provider.generator" class="Aldaflux\Bundle\SeoBundle\Provider\SeoGeneratorProvider" public="true" />

        <service id="aldaflux_seo.tag_factory" class="Aldaflux\Bundle\SeoBundle\Factory\TagFactory"/>
        <service id="aldaflux_seo.builder" class="Aldaflux\Bundle\SeoBundle\Builder\TagBuilder" shared="false">
            <argument id="aldaflux_seo.tag_factory" type="service"/>
        </service>
        <service id="aldaflux_seo.twig.seo_extension" class="Aldaflux\Bundle\SeoBundle\Twig\SeoExtension">
            <argument id="aldaflux_seo.provider.generator" type="service"/>
            <tag name="twig.extension"/>
        </service>

        <!-- for autowiring -->
        <service id="Aldaflux\Bundle\SeoBundle\Provider\SeoGeneratorProvider" alias="aldaflux_seo.provider.generator" />
    </services>
</container>
